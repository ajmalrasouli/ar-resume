{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*", "/api/*", "/*.{css,scss,js,png,jpg,jpeg,gif,ico,svg,woff,woff2,ttf,eot}"]
  },
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"],
      "methods": ["GET", "POST", "OPTIONS"]
    }
  ],
  "responseOverrides": {
    "400": {
      "statusCode": 400,
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    "401": {
      "statusCode": 401,
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    "404": {
      "statusCode": 404,
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    }
  }
}