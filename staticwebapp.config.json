{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*", "/api/*", "/*.{css,scss,js,png,jpg,jpeg,gif,ico,svg,woff,woff2,ttf,eot}"]
  },
  "routes": [
    {
      "route": "/api/chat",
      "allowedRoles": ["anonymous"],
      "methods": ["POST", "OPTIONS"],
      "headers": {
        "Content-Type": "application/json"
      }
    },
    {
      "route": "/api/code",
      "allowedRoles": ["anonymous"],
      "methods": ["POST", "OPTIONS"],
      "headers": {
        "Content-Type": "application/json"
      }
    },
    
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"],
      "headers": {
        "Content-Type": "application/json"
      }
    }
  ],
  "mimeTypes": {
    ".json": "text/json"
  }
}